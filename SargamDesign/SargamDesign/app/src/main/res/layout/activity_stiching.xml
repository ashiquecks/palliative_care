<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.Stiching"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:orientation="vertical"
                android:background="@drawable/custom_mes_edittext">
                
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal"
                android:gravity="center_horizontal">


                <LinearLayout
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="180dp"
                        android:layout_height="30dp"
                        android:text="Churidhar"
                        android:textColor="@color/colorwhite"
                        android:background="@color/colorblack"
                        android:paddingLeft="12dp"
                        android:paddingTop="5dp"
                        android:id="@+id/churidar"/>

                    <ImageView
                        android:layout_width="180dp"
                        android:layout_height="180dp"
                        android:background="@drawable/cr1"
                        android:tag="kurthis"
                        android:id="@+id/grstichkurtha"/>

                    <TextView
                        android:layout_width="182dp"
                        android:layout_height="30dp"
                        android:text="saree"
                        android:textColor="@color/colorwhite"
                        android:background="@color/colorblack"
                        android:paddingLeft="12dp"
                        android:paddingTop="5dp"
                        android:layout_marginTop="12dp"/>

                    <ImageView
                        android:layout_width="180dp"
                        android:layout_height="180dp"
                        android:background="@drawable/custom_mes_edittext"
                        android:id="@+id/grstichsaree"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="180dp"
                        android:layout_height="30dp"
                        android:text="Modern Items"
                        android:textColor="@color/colorwhite"
                        android:background="@color/colorblack"
                        android:paddingLeft="12dp"
                        android:paddingTop="5dp"/>

                    <ImageView
                        android:layout_width="180dp"
                        android:layout_height="180dp"
                        android:background="@drawable/custom_mes_edittext"
                        android:id="@+id/grstichdupatta"/>

                    <TextView
                        android:layout_width="180dp"
                        android:layout_height="30dp"
                        android:text="Salwar"
                        android:textColor="@color/colorwhite"
                        android:background="@color/colorblack"
                        android:paddingLeft="12dp"
                        android:paddingTop="5dp"
                        android:layout_marginTop="12dp"/>

                    <ImageView
                        android:layout_width="180dp"
                        android:layout_height="180dp"
                        android:background="@drawable/custom_mes_edittext"
                        android:id="@+id/grstichmoderntm"/>

                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal"
                android:gravity="center_horizontal">


                <LinearLayout
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="180dp"
                        android:layout_height="30dp"
                        android:text="Frock and Top"
                        android:textColor="@color/colorwhite"
                        android:background="@color/colorblack"
                        android:paddingLeft="12dp"
                        android:paddingTop="5dp"
                        android:layout_marginTop="12dp"/>

                    <ImageView
                        android:layout_width="180dp"
                        android:layout_height="180dp"
                        android:background="@drawable/custom_mes_edittext"
                        android:tag="kurthis"
                        android:id="@+id/grstichfrockandtop"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="180dp"
                        android:layout_height="30dp"
                        android:text="Kurtas"
                        android:textColor="@color/colorwhite"
                        android:background="@color/colorblack"
                        android:paddingLeft="12dp"
                        android:paddingTop="5dp"
                        android:layout_marginTop="12dp"/>

                    <ImageView
                        android:layout_width="180dp"
                        android:layout_height="180dp"
                        android:background="@drawable/custom_mes_edittext"
                        android:id="@+id/grstichchuridar"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>