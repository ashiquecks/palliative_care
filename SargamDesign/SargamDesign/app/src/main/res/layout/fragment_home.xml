<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ViewFlipper
                android:layout_width="match_parent"
                android:layout_height="550dp"
                android:id="@+id/view_fliper"
                android:layout_marginTop="2dp"/>
            <TextView
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:textSize="66dp"
                android:text="50% OFF"
                android:paddingLeft="66dp"
                android:layout_marginTop="-260dp"
                android:textStyle="bold"
                android:textColor="@color/colorwhite"
                android:background="@color/colorliteblack"/>
            <TextView
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:text="for branded items"
                android:paddingBottom="12dp"
                android:paddingLeft="32dp"
                android:paddingRight="12dp"
                android:textStyle="bold"
                android:textColor="@color/colorwhite"
                android:background="@color/colorlitered"/>
            <GridView
                android:id="@+id/griditem"
                android:layout_marginTop="60dp"
                android:numColumns="4"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp">

            </GridView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:paddingLeft="12dp"
                android:paddingTop="5dp"
                android:text="DressMeterials"
                android:textColor="@color/colorwhite"
                android:background="@color/colororang"
                android:layout_marginTop="12dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="220dp"
                    android:layout_height="360dp"
                    android:background="@drawable/slideimage2"
                    android:id="@+id/salwar"/>
                <LinearLayout
                    android:layout_width="180dp"
                    android:layout_height="360dp"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="180dp"
                        android:layout_height="180dp"
                        android:background="@drawable/krt1"
                        android:id="@+id/kidsitem"/>
                    <ImageView
                        android:layout_width="180dp"
                        android:layout_height="180dp"
                        android:background="@drawable/kurta1"
                        android:id="@+id/saree"/>
                </LinearLayout>
            </LinearLayout>
            <Button
                android:layout_width="120dp"
                android:layout_height="30dp"
                android:layout_marginTop="12dp"
                android:layout_marginLeft="12dp"
                android:text="View All"
                android:textSize="10dp"
                android:textColor="@color/colorwhite"
                android:background="@drawable/custome_viewall_button"
                android:id="@+id/viewcousyumesbutton"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:paddingLeft="12dp"
                android:paddingTop="5dp"
                android:text="Handicraft"
                android:textColor="@color/colorwhite"
                android:background="@color/colororang"
                android:layout_marginTop="12dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="220dp"
                    android:layout_height="360dp"
                    android:background="@drawable/hcr1"
                    android:id="@+id/modernitems"/>
                <LinearLayout
                    android:layout_width="180dp"
                    android:layout_height="360dp"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="180dp"
                        android:layout_height="180dp"
                        android:background="@drawable/hcr4"
                        android:id="@+id/relegionitem"/>
                    <ImageView
                        android:layout_width="180dp"
                        android:layout_height="180dp"
                        android:background="@drawable/hcr3"
                        android:id="@+id/natureitem"/>
                </LinearLayout>
            </LinearLayout>
            <Button
                android:layout_width="120dp"
                android:layout_height="30dp"
                android:layout_marginTop="12dp"
                android:layout_marginLeft="12dp"
                android:text="View All"
                android:textSize="10dp"
                android:textColor="@color/colorwhite"
                android:background="@drawable/custome_viewall_button"
                android:id="@+id/viewmuralpaint"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:paddingLeft="12dp"
                android:paddingTop="5dp"
                android:text="StichingModel"
                android:textColor="@color/colorwhite"
                android:background="@color/colororang"
                android:layout_marginTop="12dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="220dp"
                    android:layout_height="360dp"
                    android:background="@drawable/custom_mes_edittext"
                    android:id="@+id/moderstich"/>
                <LinearLayout
                    android:layout_width="180dp"
                    android:layout_height="360dp"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="180dp"
                        android:layout_height="180dp"
                        android:background="@drawable/custom_mes_edittext"
                        android:id="@+id/kidsstich"/>
                    <ImageView
                        android:layout_width="180dp"
                        android:layout_height="180dp"
                        android:background="@drawable/custom_mes_edittext"
                        android:id="@+id/tradeetionalstich"/>
                </LinearLayout>
            </LinearLayout>
            <Button
                android:layout_width="120dp"
                android:layout_height="30dp"
                android:layout_marginTop="12dp"
                android:layout_marginLeft="12dp"
                android:text="View All"
                android:textSize="10dp"
                android:textColor="@color/colorwhite"
                android:background="@drawable/custome_viewall_button"
                android:id="@+id/viewstich"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:background="@drawable/custom_mes_edittext"
                android:layout_marginBottom="-90dp"
                android:layout_marginTop="12dp"/>

        </LinearLayout>
    </ScrollView>




</LinearLayout>