<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.OrderSummary"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="@color/litegray">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/litegray"
            android:gravity="center_horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorwhite"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="name"
                    android:background="@color/colorgreen"
                    android:id="@+id/measurment_name"
                    android:textSize="20dp"
                    android:paddingLeft="12dp"
                    android:paddingBottom="6dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="color"
                    android:id="@+id/measurment_color"
                    android:layout_marginTop="12dp"
                    android:layout_marginLeft="12dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="size"
                    android:id="@+id/measurment_size"
                    android:layout_marginTop="12dp"
                    android:layout_marginLeft="12dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Material"
                    android:id="@+id/measurment_material"
                    android:layout_marginTop="12dp"
                    android:layout_marginLeft="12dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Count"
                    android:id="@+id/measurment_count"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="12dp"
                    android:background="@color/colorgreen"
                    android:textColor="@color/colorwhite"
                    android:paddingLeft="6dp"
                    android:paddingTop="6dp"
                    android:paddingBottom="6dp"
                    android:paddingRight="6dp"
                    android:layout_marginBottom="22dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorwhite"
                android:layout_marginTop="12dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorwhite"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:text="Stitching Price"
                        android:layout_gravity="right"
                        android:layout_marginRight="22dp"
                        android:background="@color/colorgreen"
                        android:paddingLeft="6dp"
                        android:paddingTop="6dp"
                        android:paddingBottom="6dp"
                        android:paddingRight="6dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="--------"
                        android:id="@+id/stitching_price"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorwhite"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:text="Material Price"
                        android:layout_gravity="right"
                        android:layout_marginRight="22dp"
                        android:background="@color/colorgreen"
                        android:paddingLeft="6dp"
                        android:paddingTop="6dp"
                        android:paddingBottom="6dp"
                        android:paddingRight="6dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="--------"
                        android:id="@+id/bill_material_price"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorwhite"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:text="Design Price"
                        android:layout_gravity="right"
                        android:layout_marginRight="22dp"
                        android:background="@color/colorgreen"
                        android:paddingLeft="6dp"
                        android:paddingTop="6dp"
                        android:paddingBottom="6dp"
                        android:paddingRight="6dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="--------"
                    android:id="@+id/measurment_desing_price" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorwhite"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:text="Total Price   "
                        android:layout_gravity="right"
                        android:layout_marginRight="22dp"
                        android:background="@color/colorgreen"
                        android:paddingLeft="6dp"
                        android:paddingTop="6dp"
                        android:paddingBottom="6dp"
                        android:paddingRight="6dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="--------"
                        android:id="@+id/measurment_total_price" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorwhite"
                android:layout_marginTop="12dp"
                android:orientation="vertical"
                android:gravity="center_horizontal">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:text="FirstName"
                        android:layout_marginLeft="12dp"
                        android:layout_marginTop="12dp" />
                    <EditText
                        android:layout_width="250dp"
                        android:layout_height="40dp"
                        android:textSize="12dp"
                        android:hint="EnterFirstName"
                        android:layout_marginLeft="12dp"
                        android:paddingLeft="12dp"
                        android:layout_marginTop="12dp"
                        android:background="@color/colorwhite"
                        android:id="@+id/bayer_name"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:text="Email"
                        android:layout_marginLeft="12dp"
                        android:layout_marginTop="12dp" />
                    <EditText
                        android:layout_width="250dp"
                        android:layout_height="40dp"
                        android:textSize="12dp"
                        android:hint="EnterEmail"
                        android:paddingLeft="12dp"
                        android:layout_marginLeft="12dp"
                        android:layout_marginTop="12dp"
                        android:background="@color/colorwhite"
                        android:id="@+id/bayer_email"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:text="Phone"
                        android:layout_marginLeft="12dp"
                        android:layout_marginTop="12dp" />
                    <EditText
                        android:layout_width="250dp"
                        android:layout_height="40dp"
                        android:textSize="12dp"
                        android:hint="EnterPhoneNumber"
                        android:paddingLeft="12dp"
                        android:layout_marginLeft="12dp"
                        android:layout_marginTop="12dp"
                        android:background="@color/colorwhite"
                        android:id="@+id/bayer_phone"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:text="State"
                        android:layout_marginLeft="12dp"
                        android:layout_marginTop="12dp" />
                    <Spinner
                        android:layout_width="250dp"
                        android:layout_height="40dp"
                        android:textSize="12dp"
                        android:paddingLeft="12dp"
                        android:layout_marginLeft="12dp"
                        android:layout_marginTop="12dp"
                        android:id="@+id/state_spinner" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:text="City"
                        android:layout_marginLeft="12dp"
                        android:layout_marginTop="12dp" />
                    <EditText
                        android:layout_width="250dp"
                        android:layout_height="40dp"
                        android:textSize="12dp"
                        android:hint="EnterCity"
                        android:paddingLeft="12dp"
                        android:layout_marginLeft="12dp"
                        android:layout_marginTop="12dp"
                        android:background="@color/colorwhite"
                        android:id="@+id/bayer_city"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:text="District"
                        android:layout_marginLeft="12dp"
                        android:layout_marginTop="12dp" />
                    <EditText
                        android:layout_width="250dp"
                        android:layout_height="40dp"
                        android:textSize="12dp"
                        android:hint="EnterDistrict"
                        android:paddingLeft="12dp"
                        android:layout_marginLeft="12dp"
                        android:layout_marginTop="12dp"
                        android:background="@color/colorwhite"
                        android:id="@+id/bayer_district"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:text="Address"
                        android:layout_marginLeft="12dp"
                        android:layout_marginTop="12dp" />
                    <EditText
                        android:layout_width="250dp"
                        android:layout_height="120dp"
                        android:textSize="12dp"
                        android:paddingLeft="12dp"
                        android:paddingTop="12dp"
                        android:gravity="start"
                        android:hint="EnterAddress"
                        android:layout_marginLeft="12dp"
                        android:layout_marginTop="12dp"
                        android:background="@color/colorwhite"
                        android:id="@+id/bayer_address"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:text="PinNumber"
                        android:layout_marginLeft="12dp"
                        android:layout_marginTop="12dp" />
                    <EditText
                        android:layout_width="250dp"
                        android:layout_height="40dp"
                        android:textSize="12dp"
                        android:gravity="start"
                        android:hint="EnterPinNumber"
                        android:paddingLeft="12dp"
                        android:paddingTop="12dp"
                        android:layout_marginLeft="12dp"
                        android:layout_marginTop="12dp"
                        android:background="@color/colorwhite"
                        android:id="@+id/bayer_pinCode"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:text="LandMark"
                        android:layout_marginLeft="12dp"
                        android:layout_marginTop="12dp" />
                    <EditText
                        android:layout_width="250dp"
                        android:layout_height="40dp"
                        android:textSize="12dp"
                        android:gravity="start"
                        android:hint="EnterLandMark"
                        android:paddingLeft="12dp"
                        android:paddingTop="12dp"
                        android:layout_marginLeft="12dp"
                        android:layout_marginTop="12dp"
                        android:background="@color/colorwhite"
                        android:id="@+id/bayer_landMark"/>
                </LinearLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="state"
                    android:textColor="@color/transparent"
                    android:id="@+id/state_name"/>

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorgreen"
                    android:text="Submit"
                    android:layout_marginTop="12dp"
                    android:id="@+id/submit_stitching_order"/>


            </LinearLayout>



        </LinearLayout>
    </ScrollView>
</LinearLayout>